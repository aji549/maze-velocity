<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@color/gray_light"
    android:padding="10dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/vehicle_icon"
        android:layout_width="@dimen/vehicle_icon_size"
        android:layout_height="@dimen/vehicle_icon_size"
        android:contentDescription="@string/vehicle_select_title"
        android:layout_gravity="center_horizontal"
        android:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/vehicle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Name"
        android:textAppearance="@style/VehicleNameText"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/vehicle_unlock_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock requirements"
        android:textAppearance="@style/UnlockDescText"
        android:layout_marginTop="2dp"
        android:gravity="center"/>
</LinearLayout>