<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <!-- Maze area (custom rendering via SurfaceView or Canvas) -->
    <FrameLayout
        android:id="@+id/maze_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/score_overlay"
        android:layout_weight="1"
        android:background="@color/gray_medium"/>

    <!-- Score overlay -->
    <TextView
        android:id="@+id/score_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:text="@string/score_label"
        android:textAppearance="@style/OverlayScore"/>

    <!-- Time overlay -->
    <TextView
        android:id="@+id/time_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="@string/time_label"
        android:textAppearance="@style/OverlayTime"/>

    <!-- Controls: Arrow buttons (optional for touch input) -->
    <LinearLayout
        android:id="@+id/control_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_left"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Left"/>

        <ImageButton
            android:id="@+id/btn_up"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_up"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Up"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <ImageButton
            android:id="@+id/btn_down"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_down"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Down"
            android:layout_marginRight="12dp"/>

        <ImageButton
            android:id="@+id/btn_right"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_right"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Right"/>
    </LinearLayout>

    <!-- Win/Lose message overlay (Visibility: gone by default) -->
    <TextView
        android:id="@+id/game_message_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/win_message"
        android:textSize="26sp"
        android:textColor="@color/win_green"
        android:visibility="gone"
        android:background="@color/gray_light"
        android:padding="24dp"/>
</RelativeLayout>